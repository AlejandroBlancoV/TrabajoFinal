<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Images\fondo.jpg" />
    <None Remove="Images\Logo.jpg" />
    <None Remove="Images\Shields\ChironaFCLogo.jpg" />
    <None Remove="Images\Shields\CholoCFLogo.jpg" />
    <None Remove="Images\Shields\GabarraFCLogo.jpg" />
    <None Remove="Images\Shields\MasiaFCLogo.jpg" />
    <None Remove="Images\Shields\MerengueCFLogo.jpg" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="8.0.6" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="8.0.6">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\fondo.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\Logo.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\Shields\ChironaFCLogo.jpg" />
    <Resource Include="Images\Shields\CholoCFLogo.jpg" />
    <Resource Include="Images\Shields\GabarraFCLogo.jpg" />
    <Resource Include="Images\Shields\MasiaFCLogo.jpg" />
    <Resource Include="Images\Shields\MerengueCFLogo.jpg" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Apellidos.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Nombres.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
